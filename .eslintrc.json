{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 5
    },
    "rules": {
        "strict": 0,
        "padded-blocks": 0,
        "comma-dangle": 0,
        "func-names": 0,
        "no-var" : 0,
        "prefer-arrow-callback": 0,
        "no-unused-expressions": [2, { "allowTernary": true, "allowShortCircuit": true }]
    },
    "globals": {
        "R": true
    }
}